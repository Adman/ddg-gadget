<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <name>DuckDuckGo</name>
  <namespace>windows.sdk</namespace>
  <version>1.0.0.0</version>
  <author name="DuckDuckGo">
      <info url="http://duckduckgo.com" />
      <logo src="css/imgs/icon_128.png" />
  </author>
  <copyright>&#169; 2012</copyright>
  <description>Ask the Duck for zero-click info</description>
  <icons>
      <icon height="128" width="128" src="css/imgs/icon_128.png" />
  </icons>
  <hosts>
      <host name="sidebar">
          <autoscaleDPI>true</autoscaleDPI>

          <base type="HTML" apiVersion="1.0." src="main.html" />
          <permissions>Full</permissions>
          <platform minPlatformVersion="1.0" />
          <defaultImage src="css/imgs/icon_128.png" />
      </host>
  </hosts>
</gadget>
